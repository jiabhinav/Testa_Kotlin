<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="#F4F5F7">

                <EditText
                    android:id="@+id/textname"
                    android:hint="@string/fullname"
                    android:layout_width="match_parent"
                    android:gravity="left|top"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#2E78B5"
                    android:inputType="textCapSentences"
                    android:scrollbars="vertical"
                    android:maxLines="1"
                    android:maxLength="100"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                    android:textCursorDrawable="@drawable/cursor_color"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/view"
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="#F4F5F7"

                >
                <EditText
                    android:id="@+id/textmobile"
                    android:hint="@string/mobile"
                    android:layout_width="match_parent"
                    android:gravity="left|top"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#2E78B5"
                    android:maxLength="10"
                    android:inputType="number"
                    android:scrollbars="vertical"
                    android:textCursorDrawable ="@drawable/cursor_color"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/view"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="#F4F5F7"

                >
                <EditText
                    android:id="@+id/textemail"
                    android:hint="@string/email_address"
                    android:layout_width="match_parent"
                    android:gravity="left|top"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#2E78B5"
                    android:maxLength="100"
                    android:inputType="textEmailAddress"
                    android:scrollbars="vertical"
                    android:textCursorDrawable ="@drawable/cursor_color"

                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_below="@+id/view"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="#F4F5F7"

                >
                <EditText
                    android:id="@+id/etproblem"
                    android:hint="@string/inquiries"
                    android:layout_width="match_parent"
                    android:gravity="left|top"
                    android:layout_height="100dp"
                    app:backgroundTint="#2E78B5"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:maxLength="500"
                    android:textCursorDrawable ="@drawable/cursor_color"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/limit"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="0/500"/>


            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/add_screenshot_optional"
                android:textColor="#2E78B5"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="10dp"
                    app:cardElevation="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F4F5F7"
                    android:layout_alignParentLeft="true">



                    <ImageView
                        android:id="@+id/img1"
                        android:src="@drawable/add_circle_outline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        />


                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="7dp"
                    android:layout_toRightOf="@+id/cn11"
                    android:layout_toLeftOf="@+id/cn1111"
                    android:layout_margin="10dp"
                    app:cardElevation="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F4F5F7"
                    >


                    <ImageView
                        android:id="@+id/img2"
                        android:src="@drawable/add_circle_outline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        />

                    <ImageView
                        android:id="@+id/img22"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cn1111"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="10dp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardBackgroundColor="#F4F5F7"
                    android:layout_alignParentRight="true"

                    >

                    <ImageView
                        android:id="@+id/img3"
                        android:src="@drawable/add_circle_outline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        />


                    <ImageView
                        android:id="@+id/img33"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />



                </androidx.cardview.widget.CardView>


            </LinearLayout>



            <Button
                android:id="@+id/submitbtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/Submit"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_all"
                android:textColor="@drawable/button_text_color"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

















</LinearLayout>