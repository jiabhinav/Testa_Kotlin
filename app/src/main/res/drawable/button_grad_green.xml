<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">



    <item android:state_pressed="true" >

        <shape android:shape="rectangle"  >
            <corners
                android:radius="4dip"
                />
            <gradient android:angle="-90" android:startColor="#0fcf95" android:endColor="#0fcf95"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="4dip"
                />
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="4dip"
                />
            <gradient android:angle="-90" android:startColor="#0fcf95"  android:endColor="#0fcf95" />
        </shape>
    </item>





</selector>