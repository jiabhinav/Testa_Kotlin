<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">



    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#b1b1b1" />
            <gradient android:angle="-90" android:startColor="#2E78B5" android:endColor="#2E78B5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/BBlue" />
            <solid android:color="@color/BBlue"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/BBlue" />
            <gradient android:angle="-90" android:startColor="@color/BBlue"  android:endColor="@color/BBlue" />
        </shape>
    </item>



</selector>