<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">



    <item android:state_pressed="true" >

        <shape android:shape="rectangle"  >
            <corners
                android:radius="40dip"
                android:bottomLeftRadius="40dip"
                android:bottomRightRadius="40dip"
                android:topLeftRadius="40dip"
                android:topRightRadius="40dp"



                />
            <gradient android:angle="-90" android:startColor="#FFDD00" android:endColor="#FBC368"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="40dip"
                android:bottomLeftRadius="40dip"
                android:bottomRightRadius="40dip"
                android:topLeftRadius="40dip"
                android:topRightRadius="40dp"
                />
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="40dip"
                android:bottomLeftRadius="40dip"
                android:bottomRightRadius="40dip"
                android:topLeftRadius="40dip"
                android:topRightRadius="40dp"

                />
            <gradient android:angle="-90" android:startColor="@color/button"  android:endColor="@color/button" />
        </shape>
    </item>





</selector>