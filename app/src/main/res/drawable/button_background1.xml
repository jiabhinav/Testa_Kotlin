<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">



    <item android:state_pressed="true" >

        <shape android:shape="rectangle"  >
            <corners
                android:radius="4dip"
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip"
                />
            <stroke android:width="1dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#F8C629" android:endColor="#F8C629"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="4dip"
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip"
                />
            <stroke android:width="1dip" android:color="#F8C629" />
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="4dip"
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip"

                />
            <stroke android:width="1dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#F8C629"  android:endColor="#F8C629" />
        </shape>
    </item>





</selector>